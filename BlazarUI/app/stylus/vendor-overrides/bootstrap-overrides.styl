@import '../new-colors'

$pagination-color ?= $color-calypso
$pagination-border ?= none
$pagination-hover-color ?= $color-calypso
$pagination-active-color ?= $color-calypso
$pagination-active-bg ?= $color-calypso-light
$pagination-hover-bg ?= $color-koala

$tooltip-bg ?= $color-heffalump
$tooltip-opacity ?= 1
$popover-bg ?= $color-calypso-light
$popover-border-color ?= $color-calypso-light
$popover-arrow-outer-color ?= $color-calypso-light

$text-muted ?= $color-eerie

$link-color ?= $color-calypso
$link-hover-color ?= #007A8C
$text-color ?= $color-heffalump


// === Table overrides ===

$table-cell-padding ?= 20px
$table-condensed-cell-padding ?= 10px
$table-bg ?= $color-olaf
$table-bg-accent ?= $color-gypsum
$table-bg-hover ?= $color-gypsum
$table-bg-active ?= $table-bg-hover
$table-border-color ?= $color-koala


// === Alert & state color overrides ===

$state-success-bg ?= $color-oz-light
$state-success-text ?= $color-heffalump
$state-success-border ?= $color-oz-medium

$state-info-bg ?= $color-calypso-light
$state-info-text ?= $color-heffalump
$state-info-border ?= $color-calypso-medium

$state-warning-bg ?= #FDF3E1
$state-warning-text ?= $color-heffalump
$state-warning-border ?= #FBE1B2

$state-danger-bg ?= $color-candy-apple-light
$state-danger-text ?= $color-heffalump
$state-danger-border ?= #FAA9AC

$alert-padding ?= 8px


// === Button overrides ===

$btn-border-radius-base ?= 3px
$btn-border-radius-large ?= 3px
$btn-border-radius-small ?= 3px

$btn-default-color ?= $color-button-secondary-text
$btn-default-bg ?= $color-olaf
$btn-default-border ?= $color-lorax

$btn-primary-color ?= $color-olaf
$btn-primary-bg ?= $color-lorax
$btn-primary-border ?= $color-lorax


@import 'bootstrap'

.pagination > li > a
  border-radius 3px
  padding 5px 9px

.pagination > li:not(:last-child) > a
  margin-right 4px

.btn-default:active, .btn-default.active,
.open > .dropdown-toggle.btn-default
  border-color #ccc

.alert
  border-radius 0
  margin-bottom 10px

.btn
  border-radius $radius-standard

  &:active, &:focus
    outline 0

.btn-primary
  background-color $color-primary
  border-color $color-primary-dark-accent

// add-ons
.table-border
  border 1px solid $gray

label
  font-weight: 400

.page-header
  border-bottom 1px solid $color-battleship
  margin 0 0 30px
  padding-bottom 12px
  padding-top 30px
  color $color-heffalump

.tooltip-inner, .popover-content
  color $color-gypsum

 .btn
   padding: 0.75rem 1.5rem

.btn-link
  color $color-calypso

.btn-lg
  font-size 18px

.btn-default
  &:hover,
  &:focus
    background-color $color-button-secondary-hover-fill
    color $color-button-secondary-text

  &:active
    background-color $color-button-secondary-active-fill

.btn-primary
  &:hover,
  &:focus
    background-color $color-button-primary-hover-fill
    border-color $color-button-primary-hover-fill
    color $color-olaf

  &:active
    background-color $color-lorax-dark
    border-color $color-lorax-dark


// Table styling overrides
table
  border 1px solid $color-koala

  thead
    background $color-gypsum

    th
      text-transform uppercase
      font-size 12px

.table
  th
    color $color-heffalump
