@import '../variables'

.page-content--branch-state
  padding 30px 20px 30px 40px
  min-width 700px

  .page-header
    padding-top 0

  a
    color $color-calypso

#active-modules, #inactive-modules
  margin-bottom 40px

.module-list-header
  font-size 24px
  color $color-heffalump
  margin-bottom 30px

  &:before
    content ""
    width 25px
    height 28px
    float left
    margin-right 5px
    background url("../images/module-icon.svg")

.branch-state-headline__star
  margin-left 20px
  margin-right 15px
  position relative
  top 3px
