.sidebar__repo-name
  font-size 16px
  font-weight $font-light
  padding-left 0
  padding-right 5px
  white-space: nowrap;
  overflow: hidden;

.sidebar-item
  position relative
  display block
  padding 5px 0 5px 15px
  border-bottom 1px solid #dadada
  a
    text-decoration none

.sidebar-item__module-name
  font-size 12px
  font-weight $font-medium
  line-height 1.6
  text-overflow ellipsis
  padding-left 20px
  
.sidebar-item__module-branch-name
  color $gray-dark
  font-size 11px
  font-weight $font-light

.sidebar__active-building-icon
  position absolute
  left 18px
  top 8px

// make easier to click by
// adding padding to container
.sidebar-item__building-icon-link
  position absolute
  padding-top 10px
  padding-left 35px
  left 0px

.sidebar-item__repo-link
  margin-left 10px

.sidebar-item__branch-link
  margin-left 40px
  margin-top 3px
  margin-bottom 3px

.sidebar-item__build-number
  float right
  margin-right 5px
  &:before
    content ' - '
    opacity: 0
    display inline-block
    position relative
    right 5px

.sidebar__star
  position absolute
  top 6px
  right 3px
    
  .fa
    font-size 18px

.sidebar-item__and-more
  font-size 11px
  padding-left 40px
  cursor pointer