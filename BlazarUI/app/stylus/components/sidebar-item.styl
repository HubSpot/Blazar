.sidebar__repo-name
  font-size 16px
  font-weight $font-light
  padding-left 0
  padding-right 5px
  white-space: nowrap;
  overflow: hidden;

.sidebar-item
  position relative
  display block
  padding 2px 0 2px 15px
  border-bottom 1px solid #dadada

  &:hover
    background #efefef

.sidebar-item__module-name
  font-size 12px
  font-weight $font-medium
  line-height 1.6
  text-overflow ellipsis
  padding-left 20px
  
.sidebar-item__module-branch-name
  color $gray-dark
  font-size 11px
  font-weight $font-light

.sidebar__active-building-icon
  position absolute
  left 18px
  top 8px

// make easier to click by
// adding padding to container
.sidebar-item__building-icon-link
  position absolute
  padding 15px
  left 0px

.sidebar-item__repo-link, 
.sidebar-item__branch-link
  margin-left 21px

.sidebar-item__build-number
  margin-left 10px
  &:before
    content ' - '
    display inline-block
    position relative
    right 5px

.sidebar__star
  position absolute
  top 10px
  right 5px
  
  &:hover
    cursor pointer
    
  .fa
    font-size 18px