@import '../variables'

.module-build-history
  padding 20px

  h5
    font-weight bold
    font-size 16px
    margin-bottom 20px
    color $color-heffalump

.module-build-history__pagination
  margin 0

.historical-module-build-list
  padding-left 0

  li
    display block

.historical-module-build
  display flex
  align-items center
  height 30px
  margin-bottom -1px
  border 1px solid $color-battleship

  &:hover
    background-color $color-gypsum
    text-decoration none

.historical-module-build__build-number
  width 50px

.module-build-history-item__status
  margin 0
  padding-left 20px
  flex-grow 1
  color $color-eerie

.module-build-history-item__build-trigger-label
  margin-right 20px
  font-size 12px
