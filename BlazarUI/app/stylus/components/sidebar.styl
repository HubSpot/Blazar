@import 'variables'
@import 'mixins'

.sidebar *
  user-select none

.sidebar
  margin-top 50px
  padding-top 30px

// holds all filtering tools
.sidebar__filter
  padding 0
  position fixed
  top 50px
  left 0px
  z-index 99
  width 299px
  height 94px
  background #d5d5d5

.sidebar__filter-search
  padding 10px

.sidebar__filter-buttons
  position absolute
  bottom 0
  width 100%

.sidebar__filter-buttons-btn
  text-align center
  display inline-block
  width 50%
  border-radius 0
  background #e6e6e6
  padding 10px
  &:hover
    cursor pointer
    text-decoration none
  &.btn-default:active, &.btn-default.active
    outline none
  &.active
    background $offwhite
    &#all
      border-left 1px solid #dadada
    &#starred
      border-right 1px solid #dadada
      

.sidebar__filter-buttons-btn:focus
  background-color #fff
  border-color #ccc

.sidebar__list
  margin-top 64px

.search-input
  margin-bottom 0px
  padding 15px

.sidebar__star
  margin-right 5px

.sidebar__star.unselected
  color #dadada

.sidebar__star.selected
  color #ffd700



