@import 'variables'
@import 'mixins'

.sidebar
  .sidebar-loader
    margin-top 15px

.sidebar__filter
  padding 0
  top 0
  left 0
  width 299px

.sidebar__filter-search
  position relative
  background $offwhite
  width 100%
  border-top 1px solid $gray
  top 0px

  & div
    height 50px
    background white
    border-bottom 1px solid $gray

.sidebar__filter-selector
  height 3px
  width 33.3%
  background-color #FD8E5E
  -webkit-transition margin-left .15s
  transition margin-left .15s

  &.all
    margin-left 0
  &.starred
    margin-left 33.3%
  &.building
    margin-left 66.6%

.sidebar__filter-buttons
  bottom 0
  width 100%

.sidebar__filter-buttons-btn
  display inline-block
  position relative
  width 33.3%
  text-align center
  border-radius 0
  background $offwhite
  padding 11px 10px 10px 10px
  font-size 14px
  font-weight $font-medium
  z-index 2

  &:last-child
    border-right none
  &:hover
    cursor pointer
    text-decoration none
  &.btn-default:active
    outline none
  &.active
    transition height 1s

.sidebar__list>div
  &::-webkit-scrollbar
    width .35rem

  &::-webkit-scrollbar-track
    background-color $gray-lighter
    border-radius $radius-scrollbar

  &::-webkit-scrollbar:vertical
    width 12px

  &::-webkit-scrollbar:horizontal
    height 0

  &::-webkit-scrollbar-thumb
    background-color $black-opaque
    border-radius $radius-scrollbar
    border 2px solid $gray-lighter

.search-input, .search-input:focus
  margin-bottom 0px
  border-radius 0
  background inherit
  border none
  outline: 0
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none
  font-size 14px
  font-weight $font-light
  height 24px
  border-radius 5px
  position absolute
  left 30px
  top 12px

.search-filter__icon
  position absolute
  font-size 16px
  left 12px
  top 15px
  color $gray-dark

.sidebar__star
  margin-right 5px

.sidebar__logo
  height 45px
  width 100%
  position relative
  border-bottom 1px solid $gray
  text-align center

  & .logo
    padding 8px 15px
