@import 'variables'
@import 'mixins'

.sidebar__filter
  padding 0
  position fixed
  top 50px
  left 0px
  z-index 99
  width 299px
  height 134px
  background #d5d5d5

.sidebar__filter-search
  position relative
  top 20px
  padding 10px

.sidebar__filter-buttons
  position absolute
  bottom 0
  width 100%

.sidebar__filter-buttons-btn
  text-align center
  display inline-block
  width 33.3%
  border-radius 0
  background #e6e6e6
  padding 10px
  border-right 1px solid #dadada
  &:last-child
    border-right none
  &:hover
    cursor pointer
    text-decoration none
  &.btn-default:active, &.btn-default.active
    outline none
  &.active
    background $offwhite
    border none

.sidebar__list
  margin-top 64px

.search-input
  margin-bottom 0px
  padding 15px
  border-radius 0

.sidebar__star
  margin-right 5px

.sidebar__star.unselected
  color #dadada

.sidebar__star.selected
  color #ffd700