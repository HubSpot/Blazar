@import 'variables'
@import 'mixins'

.sidebar *
  user-select none

.sidebar
  margin-top: 50px
  padding-top: 30px

// holds all filtering tools
.sidebar__filter
  padding: 10px 20px 20px 20px
  position: fixed
  top: 50px
  left: 0px
  z-index: 99
  width: 299px
  height: 50px
  background-color: #f9f9f9
  border-bottom: 1px solid #dadada;

// holds all our repos and modules
.sidebar__list
  margin-top 20px
  overflow hidden
  padding-bottom 7px

.sidebar__repo
  position relative
  padding-left 0
  padding 10px 15px
  &:hover
    cursor pointer

.sidebar__build-detail
  position relative

.sidebar__repo-name
  font-size 16px
  font-weight $font-light
  padding-left 15px

.sidebar__repo-name a
  color #333

.sidebar__repo-branch, .sidebar__repo-branch-icon
  font-weight $font-light

.sidebar__repo-branch
  font-size 12px
  margin-left 2px

.sidebar__repo-branch-icon
  font-size 14px
  margin-left 10px
  margin-right 3px

.sidebar__repo-container
  position relative
  border-top 1px solid #dadada
  &:last-child
    border-bottom 1px solid #dadada
  &:hover
    background #efefef

.sidebar__modules
  position relative
  display none
  padding-left 33px
  padding-bottom 20px

  &.expanded
    display block

.sidebar__repo-module
  position relative
  display: block
  padding-left 12px
  line-height 1.6
  font-size 14px

.sidebar__active-building-icon
  position absolute
  left 0

.sidebar__expand
  position absolute
  right 10px
  top 50%
  margin-top -5px
  font-size 10px
  color $gray-dark

.search-input
  margin-bottom 29px
