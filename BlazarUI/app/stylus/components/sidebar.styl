@import 'variables'
@import 'mixins'

.sidebar__filter
  padding 0
  position fixed
  top 50px
  left 0px
  z-index 99
  width 299px
  height 134px
  background #d5d5d5

.sidebar__filter-search
  position relative
  height 95px
  padding 10px
  box-shadow inset 0 -4px 15px rgba(0, 0, 0, 0.05)

.sidebar__filter-buttons
  position absolute
  bottom 0
  width 100%

.sidebar__filter-buttons-btn
  text-align center
  display inline-block
  width 33.3%
  border-radius 0
  background #e6e6e6
  padding 10px
  border-right 1px solid #dadada
  &:last-child
    border-right none
  &:hover
    cursor pointer
    text-decoration none
  &.btn-default:active
    outline none
  &.active
    background $offwhite
    
.sidebar__list
  margin-top 64px

.search-input, .search-input:focus
  margin-bottom 0px
  padding 15px
  border-radius 0
  background inherit
  border none
  outline: 0
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none
  font-size 17px
  font-weight $font-light
  position absolute
  bottom 5px
  left 0px
  padding-left 35px

.search-filter__icon
  position absolute
  font-size 16px
  left 15px
  bottom 15px
  color $gray-dark

.sidebar__star
  margin-right 5px

.sidebar__star.unselected
  color #dadada

.sidebar__star.selected
  color #ffd700
  
