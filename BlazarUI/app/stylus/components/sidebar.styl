@import 'variables'
@import 'mixins'

.sidebar
  border-right 1px solid $color-battleship
  background-color $color-gypsum

  .sidebar-loader
    margin-top 15px

.sidebar__filter
  padding 0
  top 0
  left 0
  width 299px

.sidebar__filter-search
  position relative
  background $color-olaf
  width 100%
  border-top 1px solid $color-battleship
  top 0px

  & div
    height 40px
    border-bottom 1px solid $color-battleship

.sidebar__filter-selector
  height 3px
  border-radius 20px
  width 33.3%
  background $color-slinky
  -webkit-transition margin-left .15s
  transition margin-left .15s

  &.all
    margin-left 0
  &.starred
    margin-left 33.3%
  &.building
    margin-left 66.6%

.sidebar__filter-buttons
  bottom 0
  width 100%

.sidebar__filter-buttons-btn
  color $color-heffalump
  display inline-block
  position relative
  width 33.3%
  text-align center
  border-radius 0
  padding 11px 10px 10px 10px
  font-weight $font-light
  z-index 2

  &:last-child
    border-right none
  &:hover
    cursor pointer
    text-decoration none
    color $color-slinky
  &.btn-default:active
    outline none
  &.active
    transition height 1s
    font-weight normal

.sidebar__list>div
  &::-webkit-scrollbar
    width .35rem

  &::-webkit-scrollbar-track
    background-color $gray-lighter
    border-radius $radius-scrollbar

  &::-webkit-scrollbar:vertical
    width 12px

  &::-webkit-scrollbar:horizontal
    height 0

  &::-webkit-scrollbar-thumb
    background-color $black-opaque
    border-radius $radius-scrollbar
    border 2px solid $gray-lighter

.search-input, .search-input:focus
  margin-bottom 0px
  border-radius 0
  background inherit
  border none
  outline: 0
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none
  font-size 16px
  font-weight $font-light
  height 40px
  color $color-heffalump

.search-filter__icon
  position absolute
  font-size 16px
  right 12px
  top 12px
  color $color-calypso  // $link-color??

.sidebar__star
  margin-right 5px

.sidebar__logo
  height 45px
  width 100%
  position relative
  background $color-obsidian
  text-align center

  & .logo
    padding 10px 15px

    & .logo-image
      -webkit-filter invert(1)
      filter invert(1)
      height 20px
      width 75px
