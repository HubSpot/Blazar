@import '../variables'

.build-log
  position absolute
  top 220px
  left 0
  bottom 0
  right 0
  width 100%
  overflow-y scroll
  padding 10px 0
  margin 0
  font-family $monospace
  font-size 12px  
  line-height 1.6
  word-wrap normal
  background $blue-gray
  border-radius 0
  border none

.log-line
  font-size 11px
  width 100%
  margin 0
  padding 1px 10px
  &:hover
    background #fff
