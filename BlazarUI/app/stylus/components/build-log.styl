@import '../variables'

.log-pane
  position absolute
  z-index 1
  top 80px
  left 0
  bottom 0
  right 0
  width 100%
  overflow scroll
  padding 0
  margin 0
  font-family $monospace
  font-size 12px  
  line-height 1.6
  word-wrap normal
  background $blue-gray
  border-radius 0
  border none // clear pre border
  border-top 1px solid $gray
  transition top .6s
  
  &.expanded
    top 107px
    
  .alert
    margin: 10px
    
    & p
      white-space normal
      word-break break-word

.log-line
  font-size 11px
  width 100%
  margin 0
  padding 1px 10px
  &:hover
    background #fff

.log-line-emphasis
  margin-top 10px
  font-weight $font-heavy

section.log-pane
  overflow: scroll
  // will repaint on scroll if you don't put this in!!!
  transform: translateZ(0)
  font-family: Consolas, "Liberation Mono", Courier, monospace

  header
    flex: 0 1 auto

  div.log-line-wrapper
    flex: 1 1 auto
    min-height: 0
    // firefox

  .log-row
    font-size: 12px
    line-height: 12px
    height: 14px
    padding: 0 10px
    white-space: pre

    span:last-child
      padding-right: 10px

    &.missing
      background-color: rgba(255, 255, 255, 0.1)

    &.loading
      background-color: rgba(255, 255, 255, 0.4)

  footer
    flex: 0 1 40px

