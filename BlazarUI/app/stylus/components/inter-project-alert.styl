.inter-project-tag
  font-family AvenirNext-DemiBold
  font-size 12px
  color #6a78d1
  background-color #e1e4f6
  padding 2px 5px
  margin 5px 0 20px
  display inline-block

.inter-project-alert
  transition max-height 0.5s
  max-height 75px
  overflow hidden
  margin-bottom 15px
  background-color #e1e4f6
  border none
  position relative

  a
    color #00a4bd
    font-weight 500

  h3
    font-size 14px
    font-weight 600
    margin-top 0

  ul
    padding-left 20px

  li
    list-style-type none

  &.expanded
    max-height 300px
    overflow-y scroll

    &::-webkit-scrollbar
      width 8px

    &::-webkit-scrollbar-thumb
      border-radius 5px
      background-color rgba(0, 0, 0, .3)
      -webkit-box-shadow 0 0 1px rgba(255, 255, 255, .5)
      margin-right 5px

  &:hover
    cursor pointer

  .inter-project-alert__summary
    display block
    margin-bottom 20px

    .inter-project-alert__build-number
      color #7c98b6
      background-color #eaf0f6
      padding 2px 5px
      font-family AvenirNext-DemiBold
      margin-right 10px

    .inter-project-alert__status
      font-weight 600
      padding 2px 5px
      text-transform capitalize
      font-family AvenirNext-DemiBold
      margin 0 5px

      &.success
        color #00bda5
        background-color #ccf2ed

      &.warning
        color #eaa836
        background-color #fdf3e1

      &.danger
        color #f2545b
        background-color #fddbdc

    .inter-project-alert__expand
      position absolute
      right 20px
      top 25px

  .inter-project-alert__failed
    ul
      list-style-type none
      margin 0 0 20px 0
      padding 0

      li
        display block
        width 100%
        background-color #fcdde5
        padding 10px 20px
        border-radius 4px
        border 1px solid #f2545b
        margin-bottom 10px

        &:before
          content 'Build failed'
          color #f2545b
          font-weight 600
          margin-right 20px
