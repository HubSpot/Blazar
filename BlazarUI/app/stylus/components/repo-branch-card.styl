@import './card-variables.styl'

.repo-branch-card__header
  height 50px
  background-color #f9fbfd
  border $border
  border-bottom 0
  padding 15px 20px
  color #425b76
  font-family HelveticaNeue-medium
  
  & div
    display inline-block
  
.repo-branch-card__header-info
  width 37%
  
  &:before
    content 'INFO'
    
.repo-branch-card__header-last-built
  width 23%
  
  &:before
    content 'LAST BUILT'
    
.repo-branch-card__header-details
  width 27%
  
  &:before
    content 'DETAILS'
    
.repo-branch-card__header-status
  width 13%
  
  &:before
    content 'STATUS'

.repo-branch-card__info
  width 35%
  height 100%

.repo-branch-card__repo
  padding-top 6px  

.repo-branch-card__branch-and-build
  padding-top 4px
  font-family HelveticaNeue-Light
  color #7c98b6
  
.repo-branch-card__branch
  font-family HelveticaNeue
  color #425b76
  background-color #eceef1
  padding 3px 7px
  
  &:before
    font-family 'octicons'
    content '\f020  '
  
.repo-branch-card__build-number
  font-family HelveticaNeue-bold
  color #7c98b6
  
.repo-branch-card__last-build
  width 23%
  height 100%
  vertical-align middle
  padding-top 8px
  padding-left 2%
  
.repo-branch-card__last-build-time
  color #425b76
  font-family HelveticaNeue-bold

.repo-branch-card__details
  width 18%
  height 100%
  vertical-align middle
  padding-left 2%
  
.repo-branch-card__modules-built-count
  font-family HelveticaNeue-bold
  
.repo-branch-card__modules-skipped-count
  font-family HelveticaNeue-medium
  
.repo-branch-card__modules-built
  color #425b76
  
.repo-branch-card__modules-skipped
  color #7c98b6
  font-family HelveticaNeue-light

.repo-branch-card__status
  max-width 18%
  height 100%
  vertical-align middle
  float right
  padding-left 2%
  padding-top 17px
  font-family HelveticaNeue-medium
  
.repo-branch-card__status-banner--SUCCESS, .repo-branch-card__status-banner--FAILED
  padding 3px 7px

.repo-branch-card__status-banner--SUCCESS
  background-color #e8faf4
  
  & span
    color #21d596
    
    &:before
      content 'No build errors'

.repo-branch-card__status-banner--FAILED
  background-color #fdedee

  & span
    color #f2545b
    
    &:before
      content 'Build errors'
      
.card-stack__expanded
  padding 20px
  width 100%
  height auto
  
  &.hidden
    height 0
  
   & div
    display block

.card-stack__expanded-header
  font-family HelveticaNeue-light
  font-size 18px
  color #425b76
  display block
  
.card-stack__expanded-module-rows
  padding-top 20px
  
  &.hidden
    height 0

.repo-branch-card__expanded-module-row
  background-color white
  border 1px solid #eaf0f6
  height 40px
  padding 10px
  color #425b76
  
.repo-branch-card__expanded-status
  float left

.repo-branch-card__expanded-timestamp
  float right
  
.repo-branch-card__expanded-status-symbol--SUCCEEDED, .repo-branch-card__expanded-status-symbol--FAILED
  padding-right 5px
    
.repo-branch-card__expanded-status-symbol--SUCCEEDED:before
  color #00bda5
  font-family FontAwesome
  content '\f00c'
  
.repo-branch-card__expanded-status-symbol--FAILED:before
  color #f2545b
  font-family FontAwesome
  content '\f111'
  
.repo-branch-card__expanded-status-symbol--IN-PROGRESS:before
  color #008da3
  font-family FontAwesome
  content '\f110'
