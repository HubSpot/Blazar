.section-loader
  margin 0 auto
  height 28px
  width 28px
  animation rotate .8s infinite linear
  border 2px solid #888
  border-right-color transparent
  border-radius 50%
  
  &.roomy
    margin-top 20px
    margin-bottom 20px

@keyframes rotate
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
