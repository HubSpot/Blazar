$card-stack-border-color = #CCD6E2
$border = 1px solid $card-stack-border-color
$initial-height = 60px
$transition-duration = .3s
$bg-transition-duration = .15s

.card-stack
  width 100%
  padding 50px 0

.card-stack__card
  height $initial-height
  border $border
  border-bottom 0
  transition height $transition-duration, margin $transition-duration
    
.card-stack__card--expanded
  height 190px
  margin 0 -20px
  border-bottom $border
  
  & .card-stack__card-main
    background-color rgba(229, 246, 248, 1)
    border-bottom 1px solid $card-stack-border-color
    
    &:hover
      background-color rgba(229, 246, 248, 1)
  
  & i
    transition padding $transition-duration
    
  & .card-stack__card-status
    width 70px
    
  & .card-stack__card-timestamp
    padding-right 20px

.card-stack__card--last
  border-bottom $border
.card-stack__card--below-expanded
  border-top 0
  
.card-stack__wrapper
  padding 0 20px

.card-stack__card-status
  width 50px
  float left
  height 100%
  transition width $transition-duration
  
  & i
    transition padding $transition-duration
    padding-left 50px
    padding-top 10px
  
.card-stack__card-repo-and-branch
  width 150px
  height 100%
  vertical-align middle
  
  & span
    display block

.card-stack__card-build-number
  min-width 50px
  height 100%
  vertical-align middle

.card-stack__card-timestamp
  min-width 100px
  float right
  height 100%
  vertical-align middle
  transition padding $transition-duration

.card-stack__card-details
  width 100%
  height 122px
  background-color white
  padding 15px
  
.car-stack__card--last:hover
  border-bottom $border

.card-stack__card-main
  padding 10px
  height $initial-height
  cursor pointer
  transition background $bg-transition-duration
  
  &:hover
    background-color rgba(229, 246, 248, 0.4)
  
  & > *
    display inline-block
