@import './card-variables.styl'

// Outer classes
.card-stack
  width 100%
  min-width 1000px
  max-width 1350px
  padding 50px 20px
  font-family HelveticaNeue

.card-stack__wrapper
  margin 0 20px
  box-shadow 0 3px 3px 0 rgba(0, 0, 0, 0.2)


// Individual card and variations
.card-stack__card
  border $border
  border-bottom 0
  background-color #eaf0f6
  max-height 2000px
  transition margin $transition-duration
  position relative
  transition all $transition-duration

  &:hover
    top -2px
    z-index 2
    box-shadow 0 6px 6px 0 rgba(0, 0, 0, 0.2)

.card-stack__card--expanded
  margin -10px -20px -10px -20px
  border-bottom $border
  border $border-dark
  box-shadow 0 6px 6px 0 rgba(0, 0, 0, 0.2)
  z-index 3
  
  &:hover
    top 0

  & .card-stack__card-main
    border-bottom $border

.card-stack__card--last
  & .card-stack__card-main
    border-bottom $border

// Top card content
.card-stack__card-main
  padding 10px 20px
  height $initial-height
  cursor pointer
  background-color white
  transition background $bg-transition-duration
  width calc(100% - 80px)
  display inline-block

  & > div
    display inline-block


// Detailed card content
.card-stack__card-details
  width 100%
  padding 15px

.card-stack__expanded
  padding 20px
  width 100%
  max-height 2000px
  overflow-y hidden
  background-color #F9FBFD

  &.hiddenn
    max-height 0
    padding 0

   & div
    display block
