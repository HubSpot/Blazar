@import './variables.styl'

.commits
  width auto
  padding-bottom 75px
  
.commits__header
  background-color #F2F5F8
  border-bottom 1px solid $gray-light
  padding 2px 2px 2px 10px
  
  span
    color $gray-dark
    
.commits__day-of-commits--first
  border-top 1px solid $gray-light

.commits__commit
  position relative
  height auto

.commits__commit-timestamp
  position absolute
  top 0px
  right 10px
  color $gray-dark

.commits__commit-content
  margin 7px 75px 7px 10px
  
.commits__commit-wrapper
  height auto
  border 1px solid $gray-light
  border-width 0 0 1px 0
  
.commits__commit-author
  font-weight bold
  color $gray-darker
  
.commits__commit-details
  margin-top 3px
  color $gray-dark
  
.commits__commit-message
  overflow-x hidden
  text-overflow ellipsis
  white-space nowrap
  display block
