@import './variables.styl'

.commits-container
  width auto
  padding-bottom 75px
  
.commits-container--header
  background-color #F2F5F8
  border-bottom 1px solid $gray-light
  padding 2px 2px 2px 10px
  
  span
    color $gray-dark

.commits-container--commit
  position relative
  height auto

.commits-container--day-of-commits__first
  border-top 1px solid $gray-light
  
.commits-container--day-of-commits__rest
  margin-top 10px

.commits-container--commit-timestamp
  position absolute
  top 0px
  right 10px
  color $gray-dark

.commits-container--commit-content
  margin 7px 75px 7px 10px
  
.commits-container--commit-wrapper
  height auto
  border 1px solid $gray-light
  border-width 0 0 1px 0
  
.commits-container--commit-author
  font-weight bold
  color $gray-darker
  
.commits-container--commit-details
  margin-top 3px
  color $gray-dark
  
.commits-container--commit-message
  overflow-x hidden
  text-overflow ellipsis
  white-space nowrap
  display block