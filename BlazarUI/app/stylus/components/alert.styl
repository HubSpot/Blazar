@import '../variables'

.new-alert
  padding 10px
  border-radius 3px

.new-alert--danger
  border 1px solid $color-norman-medium
  background-color $color-candy-apple-light

.new-alert__icon
  font-size 36px
  margin-left 20px
  margin-right 30px
  vertical-align top

.new-alert__icon--danger
  color $color-candy-apple

.new-alert__content
  display inline-block

.new-alert__title
  font-size 16px
  line-height 24px
  margin 0 0 5px
  font-weight 600
