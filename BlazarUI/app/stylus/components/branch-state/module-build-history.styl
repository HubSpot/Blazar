@import '../../variables'

.module-build-history
  padding 20px

  h5
    font-weight bold
    font-size 16px
    margin-bottom 20px

.module-build-history__pagination
  margin 0

.module-build-history__list
  padding-left 0

  li
    display block

.module-build-history-item
  display flex
  align-items center
  height 30px
  margin-bottom -1px
  border 1px solid $color-battleship

.module-build-history-item__build-number
  width 50px

.module-build-history-item__status
  margin 0
  padding-left 20px
  flex-grow 1

.module-build-history-item__build-trigger-label
  margin-right 20px
  font-size 12px

.module-build-history-item--clickable:hover
  background-color $color-gypsum

.module-build-history-item-link-wrapper:hover
  text-decoration none
