@import '../../variables'

.module-item
  height 73px
  list-style none
  // border 1px #cbd6e2 solid
  display flex

.module-build--success, .module-build--info
  &:hover
    background-color $color-gypsum

.module-build--failed
  background-color $color-norman-light
  &:hover
    background-color #fcd4e1

.module-build--warning
  background-color $color-marigold-light
  &:hover
    background-color #ffedd6

.module-item-summary__build-number
  width 75px
  font-size 18px

.module-build
  padding 12px 20px
  display inline-block
  flex-grow 1
  cursor pointer

.module-build-tabs + .module-build
  padding-left: 29px

.module-build__module-name
  font-size 18px
  color $color-calypso
  margin-top 0
  font-weight normal
  font-family "Avenir Next"

.module-build-tabs
  font-size 18px

.module-build-status
  margin 0

.module-build__labels
  position absolute
  top 10px
  right 20px
  height 55px
  display flex
  flex-direction column
  align-items flex-end

  :first-child
    margin-bottom auto

.module-build__commit-info
  margin 0

  a
    color $color-calypso
    text-decoration none
    cursor pointer

.status-circle
  height 10px
  width 10px
  border-radius 50%
  display inline-block
  margin-right 5px

.status-circle--success
  background-color #00bda5

.status-circle--failed
  background-color #d94c71

.module-build-icon--info
  color $color-calypso

.module-build-icon--warning
  color $color-marigold-dark

.commit-info__compare-link
  margin-left 5px
  position relative
  bottom 1px
