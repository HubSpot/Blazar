@import '../../variables'

.module-build-status
  color $color-eerie
  margin 0

.status-circle
  height 10px
  width 10px
  border-radius 50%
  display inline-block
  margin-right 5px

.status-circle--success
  background-color $color-oz

.status-circle--failed
  background-color $color-candy-apple

.module-build-icon--info
  color $color-calypso

.module-build-icon--warning
  color $color-marigold-dark
