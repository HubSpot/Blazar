@import '../../variables'

.branch-build-header
  margin-top 20px
  margin-bottom 10px
  position relative

.branch-build-header__build-number
  font-weight 400
  font-size 20px
  display inline-block
  margin 0 10px 0 0

.branch-build-header__build-trigger-label-wrapper
  margin-right 5px

.branch-build-header__commits
  position absolute
  top 3px
  left 400px

.branch-build-header__action-items
  float right
  font-weight 500
  position relative
  top 2px

  > :not(:first-child):before
    content " | "
    margin 0 5px

.branch-build-header__cancel-build-button
  color $color-candy-apple
  font-weight 500
  padding 0

  &:hover, &:focus, &[disabled]:hover
    color $color-candy-apple-dark

.users-for-build__additional-users
  color $color-calypso

.users-for-build__additional-users-list
  margin 7px 12px
