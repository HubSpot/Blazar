@import '../../variables'

.branch-build-header
  margin-top 30px
  margin-bottom 20px
  display flex
  align-items center

.branch-build-header__build-number
  font-weight 600
  font-size 14px
  margin-right 10px
  position relative

.branch-build-header__active-build-icon
  position absolute
  left -20px
  font-size 16px
  color $color-calypso

.branch-build-header__build-summary
  flex-grow 1
  font-size 12px

.branch-build-header__build-summary-info
  display flex

.branch-build-header__build-trigger-label-wrapper
  min-width 90px
  width 12%

.branch-build-header__users-for-build-wrapper
  min-width 160px
  width 20%

.branch-build-header__commits-wrapper
  min-width 150px
  width 10%

.branch-build-header__module-builds-completed
  font-style italic
  color $color-eerie

.branch-build-header__action-items
  flex-grow 1
  text-align right

.branch-build-header__cancel-build-button
  color $color-candy-apple
  font-weight 500
  padding 0
  font-size 12px

  &:hover, &:focus, &[disabled]:hover
    color $color-candy-apple-dark
