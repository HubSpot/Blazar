@import 'variables'
@import 'mixins'

body
  background-color #fff

.ui-grid
  margin: 10px 5px

.page-wrapper
  height 100vh
  width 100%
  position relative

.sidebar, .page-content
  height 100vh

.sidebar
  position fixed
  overflow hidden
  top 0
  width: $layout-offset-md
  z-index 10

  *
    user-select none

.page-content
  position relative
  width "calc(100% - %s)" % $layout-offset-md
  margin-left $layout-offset-md
  padding 5px 10px

.logo
  position relative
  display inline-block
  top -4px
  z-index 3
  margin-right 10px
  margin-top 5px

.logo-image
  width 60px

.branch__shield
  padding-top 20px
  padding-left 10px
  display block

.page-header__sub-header
  margin-top: -20px
  margin-bottom: 15px
  position: relative
