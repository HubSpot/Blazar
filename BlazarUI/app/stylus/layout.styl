@import 'variables'
@import 'mixins'

body
  background-color #fff

.ui-grid
  margin: 10px 5px

  &.tight
    margin: 0

.page-wrapper
  height 100vh
  width 100%
  position relative

.sidebar, .page-content
  height 100vh

.sidebar
  position fixed
  overflow scroll
  top 0
  width: $layout-offset-md
  padding: 30px 0 0
  border-right 1px solid $gray
  background-color $offwhite
  *
    user-select none

.sidebar-inner
  margin-top: 105px

.sidebar-collapsed
  width 40px

.sidebar-collapsed > .sidebar-inner
  display none

.sidebar-collapsed > .sidebar__collapse-button
  left 18px

.page-content
  position relative
  width "calc(100% - %s)" % $layout-offset-md
  margin-left $layout-offset-md
  padding 100px 10px 10px

.page-content.expanded
  width calc(100% - 40px)
  margin-left 40px

.page-content.expanded div.page-header
  left 40px
  width 100%

.page-header
  position fixed
  z-index 2
  width "calc(100% - %s)" % $layout-offset-md
  top 0
  left $layout-offset-md
  margin 0
  padding 10px 30px 2px 30px
  min-height 94px
  border-bottom 1px solid $gray
  background-color $offwhite

.page-section
  background #fff
  padding 10px
  standard-border()
