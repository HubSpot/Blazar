@import 'variables'
@import 'mixins'

body
  background-color #fff

.ui-grid
  margin: 10px 5px

  &.tight
    margin: 0

.page-wrapper
  height 100vh
  width 100%
  position relative

.sidebar, .page-content
  height 100vh

.sidebar
  position fixed
  overflow scroll
  top 0
  width: $layout-offset-md
  padding: 80px 0 0
  border-right 1px solid $gray
  background-color $offwhite

.page-content
  position relative
  width "calc(100% - %s)" % $layout-offset-md
  margin-left $layout-offset-md
  padding 150px 10px 10px

.page-header
  min-height 93px
  border-bottom 1px solid $gray
  position fixed
  z-index 2
  width "calc(100% - %s)" % $layout-offset-md
  top 11px
  left $layout-offset-md
  padding 10px 30px 2px 30px
  background-color #E7ECEE

.page-section
  background #fff
  padding 10px
  standard-border()
