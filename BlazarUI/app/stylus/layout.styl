@import 'variables'
@import 'mixins'

body
  // background-color #f2f4f5
  background-color #fff

.ui-grid
  margin: 10px 5px

  &.tight
    margin: 0

.page-wrapper
  height 100vh
  width 100%
  position relative
  //overflow hidden

.sidebar, .page-content
  height 100vh

.sidebar
  position fixed
  overflow scroll
  top 0
  width: $layout-offset-md
  padding: 80px 0 0
  border-right 1px solid $gray
  background-color $offwhite

.page-content
  position relative
  width "calc(100% - %s)" % $layout-offset-md
  margin-left $layout-offset-md
  margin-top 50px
  padding 100px 10px 10px

.page-header
  border-bottom 1px solid $gray
  position fixed
  z-index 2
  width "calc(100% - %s)" % $layout-offset-md
  top 11px
  left $layout-offset-md
  padding 15px 30px 6px 30px
  background-color #E7ECEE

.page-section
  background #fff
  padding 10px
  standard-border()


.dashboard-logo
  position absolute
  top 0
  left 0
  width 100%
  height 100%
